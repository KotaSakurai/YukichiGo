%h3.m-3 バトル履歴

%ul.nav.nav-pills.mb-3#pills-tab{ role: "'tablist" }
  %li.nav-item.ml-3
    %a.nav-link.active#pills-win-tab{ data: { toggle: "pill" }, href: "#pills-win", role: "tab", aria: { controls: "pills-win", selected: "true" } } WIN
  %li.nav-item.ml-3
    %a.nav-link#pills-lose-tab{ data: { toggle: "pill" }, href: "#pills-lose", role: "tab", aria: { controls: "pills-lose" } } LOSE
.tab-content#pills-tab-content
  .tab-pane.fade.show.active#pills-win{ role: "tabpanel", aria: { labelledby: "pills-win-tab" } }
    .ml-3.my-3
      - if @win_battles.blank?
        %span まだバトルがないゾ
      - else
        = render partial: 'battle', collection: @win_battles, locals: { battles: @win_battles }
  .tab-pane.fade#pills-lose{ role: "tabpanel", aria: { labelledby: "pills-lose-tab" } }
    .ml-3.my-3
      - if @lose_battles.blank?
        %span まだバトルがないゾ
      - else
        = render partial: 'battle', collection: @lose_battles, locals: { battles: @lose_battles }
