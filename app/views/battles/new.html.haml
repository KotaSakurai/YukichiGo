- content_for :noguchi_new do
  noguchi

%h2.m-3.text-center バトル

.m-3
  = image_tag "yukichi.png", width: '40%', class: "active-noguchi"
  = image_tag "yukichi.png", class: "active-noguchi", width: '40%'

  .battle-winner.d-none.js-battle-winner
    .card
      .card-body
        - if @judge.winner == current_user
          %h2.bg-success.text-white.p-3.radius You Win!
        - else
          %h2.bg-danger.text-white.p-3.radius You Lose...

        %h3.mt-2 勝者
        %p.font-weight-bold= @judge.winner.name
        %p= @judge.winner.main_monster.name

        = link_to "バトル履歴を見る", user_battles_path(current_user), class: "btn btn-primary"
